<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>otp</servlet-name>
        <servlet-class>otp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resetpass</servlet-name>
        <servlet-class>resetpass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homepage</servlet-name>
        <servlet-class>homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subject</servlet-name>
        <servlet-class>subject</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editTimetable</servlet-name>
        <servlet-class>editTimetable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>saveTimetable</servlet-name>
        <servlet-class>saveTimetable</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>otp</servlet-name>
        <url-pattern>/otp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resetpass</servlet-name>
        <url-pattern>/resetpass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homepage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subject</servlet-name>
        <url-pattern>/subject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editTimetable</servlet-name>
        <url-pattern>/editTimetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saveTimetable</servlet-name>
        <url-pattern>/saveTimetable</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
